%h2 Sign up
= twitter_bootstrap_form_for resource, as: resource_name, url: registration_path(resource_name) do |f|
  .alert-message.error
    = devise_error_messages!
 
  = f.inputs 'Personal informations' do
    = f.text_field :firstname
    = f.text_field :lastname

  = f.inputs 'Authentication' do
    = f.email_field :email
    = f.password_field :password
    = f.password_field :password_confirmation, 'Confirm password'

  = f.actions do
    = f.submit 'Sign up'
    = button_tag  'Cancel', type: 'reset', class: 'btn'

- content_for :sidebar do
  = render partial: 'devise/shared/links'
